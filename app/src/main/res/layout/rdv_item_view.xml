<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E3E3"
        android:outlineAmbientShadowColor="#000000">

        <TextView
            android:id="@+id/idRdv"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:padding="3dp"
            android:text="test"
            android:visibility="gone" />

        <TableRow
            android:background="#984141"
            android:weightSum="12">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idRdv"
                android:layout_toRightOf="@id/idRdv"
                android:layout_weight="6"
                android:autoText="false"
                android:gravity="start"

                android:padding="10dp"
                android:text="test id"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_toRightOf="@id/idRdv"
                android:layout_weight="3"
                android:drawableRight="@android:drawable/ic_menu_month"
                android:gravity="center"
                android:padding="10dp"
                android:text="test title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDate"
                android:layout_toRightOf="@id/idRdv"
                android:layout_weight="3"
                android:drawableRight="@android:drawable/ic_menu_recent_history"
                android:gravity="end"
                android:padding="10dp"
                android:text="test date"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />
        </TableRow>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDate"
            android:layout_weight="3"

            android:autoLink="map"
            android:ellipsize="end"
            android:maxLines="5"
            android:padding="3dp"
            android:text="test address"
            android:textColor="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDate"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="3dp"
            android:text="test phone"
            android:textColor="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/comments"
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:layout_below="@id/tvDate"
            android:layout_toRightOf="@id/idRdv"
            android:text="test comments"
            android:textColor="#000000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDate"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="3dp"
            android:text="test state"
            android:visibility="gone" />
    </TableLayout>

</LinearLayout>